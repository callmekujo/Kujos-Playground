<% if logged_in? %>
  <h1>Welcome to <%= @user.username %>'s page</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= gravatar_for @user, size: 150 %>
    </div>
  </div>
  
  <h4><%= @user.username %>'s Articles</h4>
  <%= render 'articles/article', obj: @user_articles %> 
  <div>
    <%= will_paginate @user_articles, class: "paginate" %> 
  </div>
<% else %> 
  <h1 class="login-error">You need to be logged in to view this user, please <%= link_to "Login", login_path %> to access this.</h1>
<% end %>
